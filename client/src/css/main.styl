/*
 * Variables
 */
contrast-background = #111
contrast-color = #FEFEFE

/*
 * Mixins
 */
border-radius(n)
  -webkit-border-radius n
  -moz-border-radius n
  border-radius n

/*
 * General styles
 */
*
  box-sizing border-box

body
  width 100%
  background-color #D2EDFF
  color #222
  font-size 100%


/*
 * Property styles
 */
.no-margin
  margin 0

.container:after
  content ""
  display table
  clear both

.block
  display block

.float-left
  float left

.float-right
  float right

.visibility-hidden
  display none

.visibility-shown
  display default

.no-select
  -webkit-touch-callout none
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select: none

.rounded
  border-radius(0.25rem)


/*
 * Page layout styles
 */
#content
  width 100%

#header
  background-color contrast-background
  color contrast-color
  padding 1em
  a
    color contrast-color
    text-decoration none
  .header-left
    float left
    width 15rem
  .header-right
    float right

// Navigation styles
.nav-menu
  a
    color contrast-color
  ul
    float left
    margin 0
    padding 0
    li
      float left
      margin 0 0 0 1rem
      list-style none

.click-menu:focus
  pointer-events none

.click-menu:focus .click-menu-content
  opacity 1
  visibility visible
  pointer-events auto

.click-menu-content
  position absolute
  z-index 1
  opacity 0
  visibility hidden
  transition visibility 0.5s

#footer
  width 100%
  clear both

// Board style
div.board
  width 100%

div.list
  width 24.25%
  float left
  background-color #43a9e1
  padding 0.5rem 0.5rem 0 0.5rem
  margin-left 0.6%
  h2
    margin-bottom 0.5rem

div.task
  @extend .no-select
  @extend .rounded
  width 100%
  background-color #d9f8fa
  padding 0.5rem
  margin-bottom 0.5rem
  cursor pointer
